
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Nutrition Facts Calculator</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <div class="container">    
        <form action="/ingredient" method='post' class='form-group'>
            <% ingredientsList.forEach((item) => { %>
                <div class="list-group-item">
                    <%= item.food_name %>
                    <input type="text" name="size" class="">
                </div>
            <% }); %>
            <a href="/" class="btn btn-primary">add more ingredient</a>
            <button type="submit" class="btn btn-primary">Analize Recipe</button>
        </form>
        
        <!-- <a href="/" class="btn btn-primary">add more ingredient</a> -->
        <!-- <a href="/recipe" class="btn btn-primary">Analized Recipe</a> -->
</div>
</body>
</html>