                <% ingredientsList.forEach((item) => { %>
                <div class="list-group-item"> <%= item.food_name %> 
                    <input type="number" name="size" class="measurement" style="float:right">
                </div>
                <% }); %>
            </div>
        
        <a href="/" class="btn btn-primary">add more ingredient</a>
</div>
